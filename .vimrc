syntax on
set fileencodings=utf-8,ucs-bom,gb18030,gbk,gb2312,cp936
set termencoding=utf-8
set encoding=utf-8

set nu
set number
colorscheme desert

"set cursorline
"set cul         

set cursorcolumn
set cuc        

set showmatch

set tabstop=4
set shiftwidth=4
set autoindent

set paste

"set listchars=tab:>-,trail:-
set listchars=tab:>-
set list

set laststatus=2
set ruler

filetype plugin indent on
